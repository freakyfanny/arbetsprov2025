{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@client/*": ["src/client/*"],
      "@server/*": ["src/server/*"]
    },
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "include": ["src", "eslint.config.js", "prisma/**/*"],
  "exclude": ["node_modules", "build"]
}
